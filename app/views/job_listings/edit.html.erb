<div class="heading-center">
  <h1>Edit Job Listing</h1>
</div>

<%= render 'layouts/flash_messages' %>

<%= render partial: 'layouts/errors', locals: { model: @job_listing } %>

<%= form_for @job_listing do |f| %>
    <%= f.label :url %>
    <%= f.text_field :url, disabled: true %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :apply_link %>
    <%= f.text_field :apply_link %>

    <%= f.label :resume_link %>
    <%= f.text_field :resume_link %>

    <%= f.label :applied_at %>
    <%= f.date_select :applied_at %>

    <%= f.label :cover_letter_link %>
    <%= f.text_field :cover_letter_link %>

    <%= f.label :favorite %>
    <%= f.check_box :favorite %>

    <%= f.label :position %>
    <%= f.text_field :position %>

    <%= f.label :posted_date %>
    <%= f.date_select :posted_date %>

    <%= f.label :company_website %>
    <%= f.text_field :company_website %>

    <%= f.label :company_name %>
    <%= f.text_field :company %>

    <%= f.label :apply_details %>
    <%= f.text_field :apply_details %>

    <%= f.submit %>
<% end %>